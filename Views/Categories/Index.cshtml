@model List<Category>

    <div class="container">
        <div class="row pt-4">
        <div class="col-6 text-primary">
                <h1 >
                    Category List
                </h1>
            </div>
            <div class="col-6 text-end pb-3">
            <a class="btn btn-primary" asp-controller="Categories" asp-action="Create"> <i class="bi bi-plus-circle"></i>  Add new Category </a>
            </div>
        </div>
       

    <table class = "table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.OrderBy(o=>o.DisplayOrder)){
            <tr>
                <th>@obj.Name</th>
                <th>@obj.DisplayOrder</th>
                <th>
                    <a class="btn btn-primary" asp-controller="Categories" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger" asp-controller="Categories" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                </th>
            </tr>
            }
        </tbody>
    </table>
</div>
