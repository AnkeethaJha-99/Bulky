@model Bulky.Model.Category

<form method="post">
    <div class="border p-2">
    <div class="container text-primary mt-4 p-0 mb-4">
        <h1> Create Category</h1>

    </div>
        <hr />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container mb-4 p-0 ">
        <label asp-for="Name" style="font-size:larger">  </label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
  
    <div class="container mb-4 p-0">
        <label asp-for="DisplayOrder" style="font-size:larger"> </label>
        <input asp-for="DisplayOrder" class="form-control"/>
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <div class="row mb-4">
        <div class="col-6 col-md-3">
            <button type="submit"  class="btn btn-primary form-control"> Create </button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-controller="Categories" asp-action="Index" class="btn btn-secondary border "> Go Back</a>
        </div>

    </div>
    </div>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}